<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_home.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorOnPrimary"
            app:title="@string/home_header"
            app:titleTextColor="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/trending_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/section_trending"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingStart="16dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/trending_see_all" />
        <TextView
            android:id="@+id/trending_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:paddingEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/trending_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trending_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/trending_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/new_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/section_new_releases"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/trending_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/new_see_all" />

        <TextView
            android:id="@+id/new_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:paddingEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/new_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/new_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/promo_card"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@id/new_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="2:1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/promo_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/promo_placeholder"
                    android:scaleType="centerCrop"
                    android:alpha="0.25" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/promo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khám phá thế giới"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/promo_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "Khoa học Viễn tưởng"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_marginTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/promo_cta"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bắt đầu ngay"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ===== Section: Sách đọc thử ===== -->
        <TextView
            android:id="@+id/free_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/section_free_preview"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="?attr/colorOnSurface"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/promo_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/free_see_all" />

        <TextView
            android:id="@+id/free_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem tất cả"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="?attr/colorPrimary"
            android:paddingEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/free_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/free_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:layout_constraintTop_toBottomOf="@id/free_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Spacer cuối để tránh đè BottomNav -->
        <View
            android:id="@+id/bottom_spacer"
            android:layout_width="0dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@id/free_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
